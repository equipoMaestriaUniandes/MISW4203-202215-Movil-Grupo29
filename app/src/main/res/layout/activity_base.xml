<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".ui.BaseActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_panel"
        android:layout_width="625dp"
        android:layout_height="421dp"
        android:layout_gravity="center"
        android:layout_marginTop="-200dp"
        app:cardCornerRadius="1000dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/background" />

        <ImageView
            android:id="@+id/blank"
            android:layout_width="929dp"
            android:layout_height="501dp"
            android:alpha="0.4"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/blnk_square" />

        <LinearLayout
            android:id="@+id/title_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:orientation="horizontal"
            android:paddingBottom="50dp">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="106dp"
                android:layout_height="107dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/ole_regular"
                android:text="Alubum"
                android:textColor="#000000"
                android:textSize="100dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/body_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="#bdbab6"
        android:clipToPadding="false"
        android:padding="0dp"
        android:paddingStart="0dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        app:cardBackgroundColor="#bdbab6"
        app:cardCornerRadius="50dp"
        app:cardUseCompatPadding="false">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView2"
            android:name="com.example.misw4203_202215_movil_grupo29.ui.AlbumListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:addStatesFromChildren="false"
            android:paddingTop="30dp"
            tools:layout="@layout/view_album_cover" />

    </androidx.cardview.widget.CardView>

</LinearLayout>